<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="umut.taherzadeh" id="2021-03-29_create-product">

        <createTable tableName="PRODUCT">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="TYPE" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE" type="CURRENCY">
                <constraints nullable="false"/>
            </column>
            <column name="CURRENCY_CODE" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="STOCK" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="IMAGE_RELATIVE_PATH" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="umut.taherzadeh" id="2021-03-29_create-product-sequence">
        <createSequence sequenceName="SEQ_PRODUCT_ID"/>
    </changeSet>

</databaseChangeLog>
